@{
    ViewBag.Title = "Home Page";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>HOME</title>

    <link rel="stylesheet" href="~/fonts/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <section class="hero" style="background-image:url('/Images/icons/so.jpg')">
        <div class="container">
            <h1>Welcome to the Blue Lagoone</h1>
            <p class="lead">Just your relaxion area</p>
        </div>
    </section>
    </body>
<section class="section-padding section-grey">
    <div class="container">
        <div class="split-section">
            <div class="split-section__text">
                <h2>  WHAT IS BLUE LAGOONE?</h2>
                <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque doloremque ducimus error excepturi, fugit ipsa iure laudantium magni modi nobis officia placeat possimus quod reprehenderit, similique, sit ullam voluptate voluptates.</p>

            </div>
            <div class="split-section__image">
                <section>
                    <video class="center-block" style="max-height:20em" controls loop>
                        <source src="~/Images/videohot.MOV" />
                    </video>
                </section>
            </div>

</section>

    <div class="jumbotron">

        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-height:20em">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner" style="max-height:20em">
                <div class="item active">
                    <img src="~/Images/765715.jpg" alt="Chania" class="center-block" style="max-height:20em">
                    <div class="carousel-caption top">
                        <h3>ENJOY THE SCENERY</h3>
                        
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/icons/room2.jpg" class="center-block" alt="Chicago" style="max-height:20em">
                    <div class="carousel-caption">
                        <h3>RUSH NOW</h3>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/Best-Maritim.jpg" class="center-block" alt="New York" style="max-height:20em">
                    <div class="carousel-caption">
                        <h3>RELAX</h3>
                       
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 fa-border"
             style="background-color:lightgray; border-width:1em">
            <h2>Getting started</h2>
            <p>
                Create Account in a few simple steps and become eligible to book the best rooms.
            </p>
            <p>@Html.ActionLink("Get Started", "Register", "Account")</p><br />
        </div>
        <div class="col-md-4 fa-border"
             style="background-color:lightblue; border-width:1em">
            <h2>Book Available Rooms</h2>
            <p>Only available rooms can be booked. Click to secure a room for your self and experience the best of luxuries.</p>
            <p>@Html.ActionLink("Am Interested!", "Create", "Room_Usage")</p><br />
        </div>
        <div class="col-md-4 fa-border"
             style="background-color:lightgray; border-width:1em">
            <h2>Booking History</h2>
            <p>View your history and explore your past lodgings. We have an advance search with which you can query your history with us.</p>
            <p>@Html.ActionLink("Am Interested!", "Index", "Room_Usage")</p>
        </div>
    </div>
</html>
