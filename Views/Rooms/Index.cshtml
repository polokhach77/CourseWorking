@model IEnumerable<Hotel_Reservation_System.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h3>Available Hotel Rooms</h3>

<p>
    @Html.ActionLink("Create New Room", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayName("Type")
        </th>
        <th>
            @Html.DisplayName("Active")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Isactive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id=item.Id }, new { @class = "fa fa-edit" }) |
            @Html.ActionLink(" ", "Details", new { id=item.Id }, new { @class = "fa fa-book" }) |
            @Html.ActionLink(" ", "Delete", new { id=item.Id }, new { @class = "fa fa-remove" })
        </td>
    </tr>
}

</table>
